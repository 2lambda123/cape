{
    // Universal commands
    "InputCntl": "input.cntl",

	// Iteration control and command-line inputs
	"RunControl": {
        // Run sequence
        "PhaseSequece": [0],
        "PhaseIters": [200],
        // System configuration
	    "nProc": 4,
        "MPI": 0,
        "Adaptive": 0,
	    // Options for ``flowCart``
	    "flowCart": {
            "it_fc": 200,
            "it_avg": 10,
            "it_start": 100,
            "cfl": 1.1,
            "mg_fc": 3,
            "y_is_spanwise": true
        },
        // Defines the flow domain automatically
        "autoInputs": {"r": 6},
        // Volume mesh options
        "cubes": {
            "maxR": 8,
            "pre": "preSpec.c3d.cntl",
            "cubes_a": 8,
            "cubes_b": 2,
            "reorder": true
        }
	},

	// Mesh settings
    "Mesh": {
        // Surface triangulation
        "TriFile": ["arrow.tri", "engine.tri"]
    },
    
    // Describe the reference values and config.
    "Config": {
        // Defer to a file for most things.
        "File": "missile.xml",
        // Declare forces and moments
        "Force": [
            "cap",
            "body",
            "fins",
            "missile_no_base",
            "missile_thrust",
            "missile_total"
        ],
        "RefPoint": {
            "missile_no_base": [0.0, 0.0, 0.0],
            "missile_total": [0.0, 0.0, 0.0],
            "fins": [0.0, 0.0, 0.0]
        },          
        // Reference quantities
        "RefArea": 3.14159,
        "RefLength": 1.0
    },
    
    // Database info
    "DataBook": {
        // List of data book components
        "Components": ["missile_no_base", "missile_thrust"],
        // Location of data book
        "Folder": "data/",
        // Parameters for collecting data
        "nFirst": 0,
        "nStats": 100,
        "nMin": 100,
        // Basic component
        "missile_no_base": {
            "Type": "FM"
        },
        "missile_thrust": {
            "Type": "FM"
        }
    },
    
    // Report info
    "Report": {
        // List of reports
        "Reports": ["case"],
        // Define the report
        "case": {
            "Title": "Automated Cart3D Report with Line Load Plots",
            "Subtitle": "Example \\texttt{06\\_lineload\\_arrow}",
            "Restriction": "pyCart Example - Distribution Unlimited",
            "Figures": ["CaseTables", "CasePlots"]
        },
        // Define the figures
        "Figures": {
            "CaseTables": {
                "Alignment": "left",
                "Subfigures": ["CaseConds", "FMTable"]
            },
            "CasePlots": {
                "Header": "Iterative analysis and sectional loads",
                "Alignment": "center",
                "Subfigures": [
                    "arrow_CA",  "arrow_CY",  "arrow_CN",
                    "arrow_CLL", "arrow_CLN", "arrow_CLM",
                    "L1",        "LL_CY",     "LL_CN"
                ]
            }
        },
        // Definitions for subfigures
        "Subfigures": {
            // Table of trajectory variables
            "CaseConds": {
                "Type": "Conditions",
                "Width": 0.28,
                "Header": "Conditions"
            },
            // Table of force and moment averages
            "FMTable": {
                "Type": "Summary",
                "Components": ["arrow_no_base", "arrow_total", "fins"],
                "Width": 0.71,
                "Header": "Force \\& Moment Summary",
                "MuFormat": "%.3e",
                "SigmaFormat": "%.3e"
            },
            // Iterative history
            "arrow": {
                "Type": "PlotCoeff",
                "Component": "arrow_no_base",
                "FigWidth": 5.5,
                "FigHeight": 4.2,
                "Width": 0.33
            },
            "arrow_CA": {"Type": "arrow", "Coefficient": "CA"},
            "arrow_CY": {"Type": "arrow", "Coefficient": "CY"},
            "arrow_CN": {"Type": "arrow", "Coefficient": "CN"},
            "arrow_CLL": {
                "Type": "arrow",
                "Coefficient": "CLL",
                "MuFormat": "%.2e",
                "ShowSigma": false
            },
            "arrow_CLM": {"Type": "arrow", "Coefficient": "CLM"},
            "arrow_CLN": {
                "Type": "arrow",
                "Coefficient": "CLN",
                "MuFormat": "%.2e",
                "ShowSigma": false
            },
            // Residual history
            "L1": {
                "Type": "PlotL1",
                "FigWidth": 5.5,
                "FigHeight": 6,
                "Width": 0.33,
                "Caption": "$L_1$ Density Residual"
            }
        }
    },
    
    // Trajectory (i.e. run matrix) description
    "Trajectory": {
        "Keys": [
            "mach", "alpha", "q", "T",
            "tilt", "CT",
            "config", "Label"
        ],
        "File": "matrix.csv",
        "GroupMesh": false,
        "GroupPrefix": "poweroff",
        "Definitions": {
            "mach": {
                "Format": "%0.2f"
            },
            "q": {
                "Label": false
            },
            "T": {
                "Label": false
            },
            "tilt": {
                "Type": "TriRotate",
                "Value": "float",
                "Group": false,
                "Center": [8.0, 0.0, 0.0],
                "Axis":   [0.0, 1.0, 0.0],
                "CompID": [
                    "engine_mount",
                    "noz_exterior",
                    "noz_interior",
                    "noz_bc"
                ],
                "Abbreviation": "_t",
                "Format": "%.1f"
            },
            "CT": {
                "Type": "SurfCT",
                "Value": "float",
                "TotalTemperature": 8500.0,
                "AreaRatio": 4.0,
                "RefPressure": "freestream",
                "RefTemperature": "freestream",
                "RefDynamicPressure": "freestream",
                "CompID": "noz_bc",
                "Abbreviation": "T",
                "Format": "%.1f"
            }
        }
    }
}
