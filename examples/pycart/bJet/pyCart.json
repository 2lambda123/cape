{
	
	// Commands to load at head of PBS scripts
	"ShellCmds": [
        "ulimit -S -s 4194304"
	],
    
    // This section sets the parameters for flowCart.
	// The names for these parameters are copied from `aero.csh`.
	"flowCart": {
        // Run sequence
        "InputSeq": [0, 1],
        "IterSeq": [0, 300],
        // flowCart order
        "first_order": [1, 0],
	    // Basic number of iterations
	    "it_fc": [200, 100],
        // Use MPI?
        "mpi_fc": [0, 0],
        // Use aero.csh?
        "use_aero_csh": 0,
	    // Nominal CFL number
	    "cfl": 1.1,
	    "cflmin": 0.8,
	    // Multigrid levels for flowcart
	    "mg_fc": 3,
	    // Limiter type
	    "limiter": 2,
        // Cut cells first-order?
        "tm": [0, 1],
	    // If this is set to true, angle of attack changes z-velocity
	    "y_is_spanwise": true,
	    // Use binary input/output instead of ASCII
	    "binaryIO": true,
        // Write a Tecplot triangulation at the end of the run
        "tecO": true,
	    // Number of threads
	    "nProc": 8,
	    // MPI command name
	    "mpicmd": "mpiexec"
	},

	// Parameters for creating the mesh
    "Mesh": {
        // This can be a list of .tri files.
        "TriFile": "bJet.i.tri",
        // Setting for 2D meshes
        "mesh2d": false,
        
        // Parameters for autoInputs
        "autoInputs": {
            // Nominal mesh radius (set to [], "", 0, or false to turn off)
            "r": 8
        },
        
        // Parameters for cubes
        "cubes": {
            // Number of refinements
            "maxR": 11,
            // Prespecified bounding boxes (set to [] or "" to turn off)
            "pre": "preSpec.c3d.cntl",
            // Internal parameters
            "cubes_a": 10,
            "cubes_b": 2,
            "reorder": true
        }
    },
    
    // Describe the reference values and config.
    "Config": {
        // Defer to a file for most things.
        "File": "Config.xml",
        // Which forces should be reported
        "Force": ["fuselage", "wing", "htail", "vtail", "engines"],
        // Reference values
        "RefArea": 1005.3,
        "RefLength": 66.3,
        // The moment point can be specified as a dictionary of components.
        "Points": {"MRP": [0.0, 0.0, 0.0]},
        "RefPoint": {
            "fuselage": "MRP",
            "wing":     "MRP",
            "htail":    "MRP",
            "vtail":    "MRP",
            "engines":  "MRP"
        }
    },
    
    // Requirements for the data book
    "DataBook": {
        // List of components to place in data book
        "Components": ["fuselage", "wing", "htail", "vtail", "engines"],
        // Number of iterations to use for statistics.
        "nStats": 100,
        "nMin": 200,
        // Place to put the data book
        "Folder": "data/poweroff",
        // Information about each component.
        "fuselage": {
            // List of coefficients to put in databook
            "Type": "FM",
            "Transformations": [{
                "Type": "ScaleCoeffs", "CLL": -1.0, "CLN": -1.0}]
        },
        "wing": {
            // List of coefficients to put in databook
            "Type": "FM",
            "Transformations": [{
                "Type": "ScaleCoeffs", "CLL": -1.0, "CLN": -1.0}]
        },
        "htail": {
            // List of coefficients to put in databook
            "Type": "FM",
            "Transformations": [{
                "Type": "ScaleCoeffs", "CLL": -1.0, "CLN": -1.0}]
        },
        "vtail": {
            // List of coefficients to put in databook
            "Type": "FM",
            "Transformations": [{
                "Type": "ScaleCoeffs", "CLL": -1.0, "CLN": -1.0}]
        },
        "engines": {
            // List of coefficients to put in databook
            "Type": "FM",
            "Transformations": [{
                "Type": "ScaleCoeffs", "CLL": -1.0, "CLN": -1.0}]
        }
    },
    
    // Report specifications
    "Report": {
        // Defaults
        "Figures": {
            // Results tables figure
            "Summary": {
                // List of subfigures
                "Subfigures": ["Conditions", "Forces"],
                // Generic options
                "Alignment": "left"
            },
            // Force convergence figure
            "History": {
                "Subfigures": [
                    "wing_CA",  "wing_CY",  "wing_CN",
                    "wing_CLL", "wing_CLM", "wing_CLN",
                    "L1",       "htail_CN", "htail_CLM"
                ],
                "Header": "Force, moment, and residual histories",
                "Alignment": "center"
            }
        },
        // Set options for specific subfigures
        "Subfigures": {
            // wing force/moment plots
            "wing": {
                "Type": "PlotCoeff",
                "Component": "wing",
                "Delta": 0.02
            },
            "wing_CA": {"Type": "wing", "Coefficient": "CA", "Delta": 0.005}, 
            "wing_CY": {"Type": "wing", "Coefficient": "CY"},
            "wing_CN": {"Type": "wing", "Coefficient": "CN"},
            "wing_CLL": {"Type": "wing", "Coefficient": "CLL", "Delta": 0.005},
            "wing_CLM": {"Type": "wing", "Coefficient": "CLM"},
            "wing_CN": {"Type": "wing", "Coefficient": "CLN"},
            // horizontal tail force/moment plots
            "htail": {
                "Type": "PlotCoeff",
                "Component": "htail",
                "Delta": 0.02
            },
            "htail_CLM": {"Type": "htail", "Coefficient": "CLM"},
            "htail_CN":  {"Type": "htail", "Coefficient": "CN"},
            // Residual plot
            "L1": {"Type": "PlotL1"},
            // Conditions table
            "Conditions": {
                "Type": "Conditions",
                "Header": "Conditions",
                "Position": "t"
            },
            // Force and moment results table
            "Forces": {
                "Type": "Summary",
                "Header": "Force \\& moment summary",
                "Position": "t",
                "Iteration": 0,
                "Components": ["wing", "htail", "fuselage"],
                "Coefficients": ["CA", "CY", "CN"],
                "CA": ["mu", "std"],
                "CY": ["mu", "std"],
                "CN": ["mu", "std"]
            }   
        }, 
        // Case history
        "poweroff": {
            "Title": "Cart3D Force, Moment, \\& Residual Report",
            "Author": "Derek J.~Dalle",
            "Archive": true,
            "Figures": ["Summary", "History"]
        }
    },
            
    
    // Trajectory description
    "Trajectory": {
        // If a file is specified, and it exists, trajectory values will be
        // read from it.  Trajectory values can also be specified locally.
        "File": "matrix.csv",
        "Keys": ["Mach", "alpha", "beta", "config", "Label"],
        // Copy the mesh
        "GroupMesh": false,
        // Configuration name [default]
        "GroupPrefix": "poweroff"
    }
}
