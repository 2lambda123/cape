#!/usr/bin/env python
# -*- coding: utf-8 -*-

# System modules
import sys

# CAPE modules
import cape.pyover
import cape.argread
import cape.text

# Import docstring (makes the docstring available to module import)
import po_doc
__doc__ = po_doc.__doc__
    
# Check if run as a script.
if __name__ == "__main__":
    # Parse inputs.
    a, kw = cape.argread.readflagstar(sys.argv)
    
    # Check for a help flag.
    if kw.get('h') or kw.get('help'):
        print(cape.text.markdown(__doc__))
        sys.exit()
        
    # Get file name.
    fname = kw.get('f', 'pyOver.json')
    
    # Try to read it.
    cntl = cape.pyover.Cntl(fname)
    
    # Call the command-line interface
    cntl.cli(*a, **kw)
    
