#!/usr/bin/env python
# -*- coding: utf-8 -*-

# System modules
import sys

# CAPE modules
import cape.pyus
import cape.text
import cape.argread

# Import docstring (makes the docstring available to module import)
import pu_doc
__doc__ = pu_doc.__doc__
    
# Check if run as a script.
if __name__ == "__main__":
    # Parse inputs.
    a, kw = cape.argread.readflagstar(sys.argv)
    
    # Check for a help flag.
    if kw.get('h') or kw.get('help'):
        # Print the docstring as help message
        print(cape.text.markdown(__doc__))
        # Exit normally
        sys.exit()
        
    # Get file name.
    fname = kw.get('f', 'pyUS.json')
    
    # Try to read it.
    cntl = cape.pyus.Cntl(fname)
    
    # Call the command-line interface
    cntl.cli(*a, **kw)
    
