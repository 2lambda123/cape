#%Module1.0############################################################
##
## xflow modulefile
##
proc ModulesHelp { } {
	global version modroot

	puts stderr"\n\tThis module configures CAPE\n"
}

# Explain the file.
module-whatis "loads CAPE"

# Module parameters
set     app        cape
set     version    current

# Local variables
set  CAPE   $HOME/cape_0.4c

# Set environment variables
setenv  CAPE              $CAPE
setenv  PYCART            $CAPE
setenv  PYFUN             $CAPE
setenv  CAPE_SCRIPTLIB    $CAPE/scriptlib
setenv  PYCART_SCRIPTLIB  $CAPE/scriptlib
setenv  PYFUN_SCRIPTLIB   $CAPE/scriptlib

# Modules in conflict
conflict pycart
conflict cape
conflict pyfun

# Folders to add to path
prepend-path PYTHONPATH       $CAPE
prepend-path PATH             $CAPE/scriptlib
